#include <stdio.h>
int main (){
	int i=1 ;
	int b=1 ;
	int a ;
	int e ;
	printf ("Kindly input a number : ");
	scanf ("%d",&a);
	e=a/2 ;
	if (a==0){
		printf ("0 is neither a prime number nor a composite number ");
	}
	else if (a==0){
		printf ("0 is neither a composite nor a prime number ");
	}
	else {
	while (b!=0 && i<=e){
		i=i+1 ;
		b=a%i ;
    }
	 if (b!=0){
		printf ("%d is a prime number ",a);
	}
	else if (b==0){
			printf ("%d is a composite number ",a);
			
	} 
}
}