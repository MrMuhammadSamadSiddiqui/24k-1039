#include <stdio.h>
int main (){
	int total ; 
	float discount,b ;
	printf ("Discount calculation program");
	printf ("Kindly input the total ammount of shopping : ");
	scanf ("%d",&total);
	if (total<500){
		discount==0 ;
	}
	else if (total>=500 && total<2000){
		discount=0.05*total ;
    }
    else if (total>=2000 && total<4000){
		discount=0.1*total ;
    }
    else if (total>=4000 && total<6000){
		discount=0.2*total ;
    }
    else if (total>=6000){
		discount=0.35*total ;	
    }
    b=total-discount ;
    printf ("Actual ammount :%d \nSaved ammount: %.2f\nAmmount after discount : %.2f",total,discount,b);
}
